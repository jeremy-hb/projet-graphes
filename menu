import random

input("Bonjour et bienvenue dans ce projet. Nous allons fair de l'ordonnencement sur des graphes \n Appuyez sur une touche pour continuer  ")
while True:
    print("Que voulez-vous faire ? \n")
    print("1. Voulez-vous faire de l'ordonnencement sur un graphe en particulier  ?\n ")
    print("2. Voulez-vous faire de l'ordonnencement sur les graphes dans l'ordre ? \n")
    print("3. quitter \n " )
